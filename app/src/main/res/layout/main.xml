<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 头部区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="不奇妙应用"
                    android:textColor="#1A237E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="对奇妙全家桶进行一些优化和破解"
                    android:textColor="#546E7A"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 支持的应用标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支持列表"
            android:textColor="#1A237E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- 卡片1: 奇妙应用 -->
        <LinearLayout
            android:id="@+id/card_appstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_appstore" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="奇妙应用"
                        android:textColor="#263238"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="com.magicalstory.AppStore"
                        android:textColor="#78909C"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="v1.3.9"
                        android:textColor="#78909C"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 功能区域 (默认折叠) -->
            <LinearLayout
                android:id="@+id/features_appstore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 解锁Premium会员权限"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 附件免硬币查看"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 去除所有广告"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 硬币数锁定114514"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 展开/折叠按钮 -->
            <TextView
                android:id="@+id/toggle_appstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawablePadding="4dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:text="详情"
                android:textColor="#2196F3"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- 卡片2: 安卓清理君 -->
        <LinearLayout
            android:id="@+id/card_cleaner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cleaner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="安卓清理君"
                        android:textColor="#263238"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="com.magicalstory.cleaner"
                        android:textColor="#78909C"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="v3.8.7"
                        android:textColor="#78909C"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/features_cleaner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 解锁永久会员"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 免登录使用"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 去除所有广告"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/toggle_cleaner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawablePadding="4dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:text="详情"
                android:textColor="#2196F3"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- 卡片3: 朝花夕拾 -->
        <LinearLayout
            android:id="@+id/card_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_days" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="朝花夕拾"
                        android:textColor="#263238"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="com.magicalstory.days"
                        android:textColor="#78909C"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="v1.3.4"
                        android:textColor="#78909C"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/features_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 解锁永久会员"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 免登录使用"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 去除所有广告"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/toggle_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawablePadding="4dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:text="详情"
                android:textColor="#2196F3"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- 卡片4: 奇妙扫描 -->
        <LinearLayout
            android:id="@+id/card_scanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_scanner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="奇妙扫描"
                        android:textColor="#263238"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="com.magicalstory.scanner"
                        android:textColor="#78909C"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="v1.0.7"
                        android:textColor="#78909C"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/features_scanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 解锁永久会员"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 免登录使用"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 去除所有广告"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/toggle_scanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawablePadding="4dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:text="详情"
                android:textColor="#2196F3"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- 卡片5: 奇妙工具箱 -->
        <LinearLayout
            android:id="@+id/card_toolbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_toolbox" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="奇妙工具箱"
                        android:textColor="#263238"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="com.magicalstory.toolbox"
                        android:textColor="#78909C"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="v0.4.1"
                        android:textColor="#78909C"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/features_toolbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 解锁永久会员"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 免登录使用"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 去除广告"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="注：此软件很多VIP功能在云端执行，无法完全破解"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/toggle_toolbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawablePadding="4dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:text="详情"
                android:textColor="#2196F3"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于作者"
            android:textColor="#1A237E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- 作者头像（圆形） - 修正了标签名称 -->
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/author_avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"/>

            <!-- 作者名字 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JiGuro"
                android:textColor="#263238"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <!-- 作者简介 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android开发者 | Xposed模块开发者 | 逆向爱好者"
                android:textColor="#546E7A"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="8dp"/>

            <!-- 联系方式 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✉️ jigurolui@gmail.com"
                android:textColor="#455A64"
                android:textSize="14sp"
                android:paddingTop="16dp"/>

            <!-- 官网链接 -->
            <TextView
                android:id="@+id/tv_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌐 jigurolgc.github.io"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:paddingTop="8dp"/>
        </LinearLayout>
        <!-- =========== 结束：支持作者板块 =========== -->

        <!-- 底部信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不奇妙应用 v2.1.8"
                android:textColor="#78909C"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="严禁用作商业用途，违者必究"
                android:textColor="#78909C"
                android:textSize="11sp"
                android:paddingTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
