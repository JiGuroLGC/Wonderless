<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义新颜色 -->
    <color name="action_bar_background">#EDF0F5</color> <!-- 浅蓝灰色，与主页背景有轻微差异 -->
    <color name="action_bar_title_color">#1A237E</color> <!-- 深蓝色，与主题一致 -->
    
    <!-- 应用主题 -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:textColorPrimary">@color/action_bar_title_color</item>
    </style>
    
    <!-- 自定义ActionBar样式 -->
    <style name="CustomActionBarStyle" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:titleTextStyle">@style/CustomTitleTextStyle</item>
    </style>
    
    <!-- 标题文本样式 -->
    <style name="CustomTitleTextStyle">
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
